<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.customer.dao.goods.BuyCartMapper">

    <!--根据用户id获取全部购物车商品信息-->
    <select id="getCartByUserId" parameterType="int" resultType="com.customer.entity.goods.BuyCartItem">
      select id,goods_id as goodsId,goods_name as goodsName,goods_num as goodsNum,goods_price as goodsPrice, spec_sn as specSn,goods_pic as goodsPic from t_goods_cart where user_id = #{userId}
    </select>

    <!-- 添加购物车 -->
    <insert id="addBuyCart" parameterType="com.customer.entity.goods.BuyCartItem" useGeneratedKeys="true" keyProperty="id">
        insert into t_goods_cart
          (user_id,goods_id,goods_sku,spec_sn,goods_name,goods_num,goods_price,goods_pic)
        values
          (#{userId},#{goodsId},#{goodsSku},#{specSn},#{goodsName},#{goodsNum},#{goodsPrice},#{goodsPic})
    </insert>

</mapper>

